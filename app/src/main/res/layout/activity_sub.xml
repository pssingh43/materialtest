<com.example.lepton.materialtest.MyLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lepton.materialtest.SubActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"></include>

    <com.example.lepton.materialtest.MyView
        android:layout_below="@+id/app_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:padding="16dp"
        android:textColor="@android:color/black"
        android:text="My View" />

</com.example.lepton.materialtest.MyLayout>
